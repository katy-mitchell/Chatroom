<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/card_hand_color_textView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_hand_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:text="@string/action_yes"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/card_hand_color_textView"
        app:layout_constraintEnd_toEndOf="@+id/card_hand_color_textView"
        app:layout_constraintStart_toStartOf="@+id/card_hand_color_textView"
        app:layout_constraintTop_toTopOf="@+id/card_hand_color_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>